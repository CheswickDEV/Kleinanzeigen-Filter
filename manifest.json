{
  "manifest_version": 2,
  "name": "Kleinanzeigen Filter",
  "version": "1.0",
  "description": "Filtert Kleinanzeigen-Angebote nach Mitglied-seit-Datum.",
  "permissions": [
    "storage",
    "https://www.kleinanzeigen.de/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "kleinanzeigen-filter@cheswick.dev",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.kleinanzeigen.de/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}